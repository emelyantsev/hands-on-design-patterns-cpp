{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C/C++: g++ build and debug all cpp in folder",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/${fileDirnameBasename}",
        "args": [],
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "C/C++: g++ build all *.cpp in folder"
      }
    ]
  }